{
  "compilerOptions": {
    // "ignoreDeprecations": "6.0",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "rootDir": ".",
    "paths": {
      "@flx-front/shared/util": ["./libs/shared/util/src/index.ts"],
      "@flx-front/shared/store": ["./libs/shared/store/src/index.ts"],
      "@flx-front/shared/data-access": [
        "./libs/shared/data-access/src/index.ts"
      ],
      "@flx-front/ui-mobile": ["./libs/ui/src/mobile/index.ts"],
      "@flx-front/ui-web": ["./libs/ui/src/web/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
